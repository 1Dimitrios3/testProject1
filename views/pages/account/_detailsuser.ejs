<!-- HEADER -->
<header id="main-header" class="py-3 bg-dark text-white mb-4">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h1>
                    <i class="fas fa-user mr-4"></i>Your account
                </h1>
            </div>
            <div class="d-flex flex-row justify-content-end flex-around tit mt-2">
                <div class="col-md-1 ml-1">
                    <a href="/"><button type="submit" class="btn btn-primary">Home</button></a>
                </div>
                <form action="/goodbye" method="POST" class="col-md-1">
                    <div class="col-md-1 mr-2">
                        <button type="submit" class="btn btn-danger mr-1">Logout</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</header>


<!-- PROFILE -->

<section id="profile">
    <div class="container mb-3 ">
        <div class="row">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header">
                        <h3>User details</h3>
                    </div>


                    <div class="card-body">
                        <form action='' method="POST" enctype="multipart/form-data">
                            <div class="col-md-5 d-flex flex-column align-items-end">
                                <img src="<%=location%>" alt="" class="d-block img-fluid mb-3">
                                <div class="form-group">
                                    <input type="file" name="avatar" class="form-control-file">
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="firstname">
                                    <h5>First name:</h5>
                                </label>
                                <input type="text" id="firstname" name="fname" class="form-control"
                                    value="<%=firstName%>">
                            </div>
                            <hr>
                            <div class="col-md-4 mb-3">
                                <label for="lastname">
                                    <h5>Last Name:</h5>
                                </label>
                                <input type="text" id="lastname" name="lname" class="form-control"
                                    value="<%=lastName%>">
                            </div>
                            <hr>
                            <div class="col-md-4 mb-3">
                                <label for="address">
                                    <h5>Address:</h5>
                                </label>
                                <input type="text" id="address" name="address" class="form-control"
                                    value="<%=address%>">
                            </div>
                            <hr>
                            <div class="col-md-4 mb-3">
                                <label for="birthdate">
                                    <h5>Birthdate:</h5>
                                </label>
                                <input type="date" id="birthdate" name="bdate" class="form-control"
                                    value="<%=birthDate%>">
                            </div>
                            <hr>
                            <div class="col-md-4 mb-3">
                                <label for="e-mail">
                                    <h5>e-mail:</h5>
                                </label>
                                <span>
                                    <%=email%>
                                </span>
                                </br>
                            </div>
                            <hr>
                            <div class="form-group">
                                <label for="exampleFormControlTextarea1">
                                    <h5>Bio:</h5>
                                </label>
                                <textarea class="form-control" name="bio" id="exampleFormControlTextarea1"
                                    rows="3"><%=bio%></textarea>
                            </div>
                            <hr>
                            <!-- This part/data of the membership,money and sessions left are not passing through a controller. Need to be worked on. -->
                            <div class="col-md-3 mb-3">
                                <label for="money">
                                    <h5>Money:</h5>
                                </label>
                                <input type="text" class="form-control" value="<%=// money%>">
                            </div>
                            <hr>
                            <div class="col">
                                <h5 class="mb-1">Sessions left:</h5>
                                <p class="text-muted">5</p>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-left ml-3">
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </form>
                        <!-- <hr> -->
                        <!-- Modal Section -->

                        <!-- Button trigger modal -->
                        <div class="col d-flex align-items-end flex-column">
                            <h5 class="mb-1">Membership type:</h5>
                            <p class="text-muted"><%=membershipName%></p>
                            <button type="button" class="btn btn-warning text-white ml-2" data-toggle="modal"
                                data-target="#exampleModal">Upgrade</button>
                        </div>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Upgrade Membership
                                        </h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        You are about to cancel your current membership and upgrade to a new one!
                                        Are you sure you want to proceed?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Close</button>
                                        <a href="/memberships"><button type="button" class="btn btn-primary">Yes take me
                                                there</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <br><br>

                        <!-- End of Modal Section -->

                        <!-- <form action="" method="POST">
                            <div class="col d-flex align-items-end flex-column">
                                <h5 class="mb-1">Membership type:</h5>
                                <p class="text-muted">Bronze</p>
                                <button class="btn btn-warning text-white ml-2">Upgrade</button>
                            </div>
                        </form> -->

                        <hr>
                        <div class="col">
                            <h5 class="mb-1">Upcoming Trainings:</h5>
                            <br>
                            <table class="table">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">Datetime</th>

                                        <th scope="col">Trainer </th>
                                        <th scope="col">Push it</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(let i=0; i < payload.length; i++) { %>
                                        <tr>
                                            <th scope="row">

                                                <%= payload[i].startDate %>
                                            </th>

                                            <td>
                                                <%= payload[i].firstName %>
                                                    <%= payload[i].lastName %>
                                            </td>
                                            <td><button class="btn btn-danger">Cancel</button></td>

                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>

                        </div>
                        <hr>
                        <div class="col">
                            <h5 class="mb-1">Past Trainings:</h5>
                            <br>
                            <table class="table">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">Datetime</th>
                                        <th scope="col">Trainer</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">01/01/2021</th>
                                        <td>Trainer Litsa</td>

                                    </tr>


                                </tbody>
                            </table>
                        </div>
                        <hr>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>