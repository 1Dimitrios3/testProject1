<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,500;1,200;1,400&display=swap"
    rel="stylesheet">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<style>
    * {
        box-sizing: border-box;
    }

    body {
        display: grid;
        place-items: center;
        background:
            linear-gradient(to bottom right, #7160F8 15%, transparent),
            radial-gradient(circle at 100% 0%, rgba(255, 255, 255, .2) 10%, transparent 20%) center center / 15px 15px,
            linear-gradient(to bottom right, #6f78c1, #95c4dc);
    }

    .wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        /* background: #888; */
        width: 100%;
        height: 100vh;
        /* background:
            linear-gradient(to bottom right, #7160F8 15%, transparent),
            radial-gradient(circle at 100% 0%, rgba(255, 255, 255, .2) 10%, transparent 20%) center center / 15px 15px,
            linear-gradient(to bottom right, #6f78c1, #95c4dc); */
        background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.6)), url('/images/successback.png');
        background-repeat: no-repeat;
        background-size: cover;
    }

    .outer {
        position: relative;
        background: #fff;
        height: 400px;
        width: 550px;
        overflow: hidden;
        display: flex;
        align-items: center;
        border-radius: 15px;
        box-shadow: 0 4px 5px rgba(0, 0, 0, 0.3);
    }

    img {
        position: absolute;
        top: 0px;
        right: 0px;
        bottom: 0px;
        z-index: 0;
        height: 400px;
        width: 550px;
        animation-delay: 0.5s;
    }

    .content {
        position: absolute;
        left: 200px;
        top: 200px;
        font-family: 'Poppins', sans-serif;
        width: 450px;
        font-weight: 500;
        z-index: 3
    }

    h2 {
        color: #fff;
        position: relative;
        top: -20px;
        right: 150px;
        text-align: center;
    }

    .msg {
        color: #fff;
        position: relative;
        top: -15px;
        right: 144px;
        text-align: center;
        font-size: 20px;
    }

    .bg {
        display: inline-block;
        color: #fff;
        background: cornflowerblue;
        padding: 5px 10px;
        border-radius: 50px;
        font-size: .7em;
    }

    .btn1 {
        z-index: 6;
        cursor: pointer;
        background-color: rgba(24, 181, 152, 1);
        margin: 0 auto;
        position: relative;
        top: 135px;
        left: 200px;
        color: #fff;
        font-size: 24px;
        padding: 5px 20px;
        border-radius: 12px;
        font-family: 'Poppins', sans-serif;
        font-weight: 300;
        transition: 0.3s ease-in-out;
        border: 2px solid #fff;
    }

    .btn1:hover {
        background-color: #fff;
        color: rgba(24, 181, 152, 1);
        box-shadow: 0 4px 5px rgba(0, 0, 0, 0.3);
    }
</style>

<body>
    <div class="wrapper">
        <div class="outer">
            <div class="content">
                <!-- <span class="bg animated fadeInDown">EXCLUSIVE</span> -->
                <h2> Success! <br>
                </h2>
                <p class="msg">
                    <%= data%>
                </p>
            </div>
            <!-- <a href="/detailsuser"><button class="btn1">Visit my page</button></a> -->
            <a href="<%=redirectTo%>"><button class="btn1">Continue</button></a>
            <img src="/images/successBanner.png" width="530px" class="animated fadeInRight">
        </div>
    </div>
</body>